<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewsPage">

    <TextView
            android:text="@string/news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/news_title"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6" android:textSize="30sp"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/news_title" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/line_between_title_subtitle"/>
    <TextView
            android:text="@string/news_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_subtitle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/line_between_title_subtitle" android:layout_marginTop="4dp"
            android:textSize="16sp" android:textStyle="italic"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/news_subtitle"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:id="@+id/news_layout">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_content"
                    android:text="@string/news_content" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:fontFamily="casual"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_share_star_yellow_24dp"
                    android:id="@+id/imageView"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/textView5"
                    android:layout_marginEnd="12dp" android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/news_content"
                    android:contentDescription="@string/favorite_button_description"/>
            <TextView
                    android:text="@string/favorite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    app:layout_constraintEnd_toStartOf="@+id/imageView2"
                    android:layout_marginEnd="42dp"
                    android:textSize="18sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/news_content"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_share_red_24dp"
                    android:id="@+id/imageView2" app:layout_constraintEnd_toStartOf="@+id/textView6"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/news_content"
                    android:contentDescription="@string/share_button_description"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6" android:text="@string/share_button" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textSize="18sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/news_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>